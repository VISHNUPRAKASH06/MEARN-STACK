doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Signup Form
  body
    section.container
      .signup
        h1 Sign up to the Web App
        form(method='post', action='http://localhost:3002/user/signup')
          p
            input(type='text', name='fName', value='', placeholder='firstName', required='')
          p
            input(type='text', name='lastName', value='', placeholder='lastName', required='')
          p
            input(type='number', name='mobileNumber', value='', placeholder='mobile number', required='')
          p
            input(type='email', name='email', value='', placeholder='email', required='')
          p
            input(type='password', name='password', value='', placeholder='Password', required='')
          p.submit
            input(type='submit', name='', value='sign up')
